<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Sign In Fragment -->
    <style name="login_edit_text_fields">
        <item name="android:layout_marginHorizontal">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
    </style>

    <style name="bottom_nav_active">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="bottom_nav_inactive">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="login_cardview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">-32dp</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>